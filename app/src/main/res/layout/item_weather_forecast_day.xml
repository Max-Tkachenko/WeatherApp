<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:paddingHorizontal="6dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="25.12" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/itemForecastDayTvDate"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Partly cloudy" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvTempMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/temp_min"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemForecastDayTvDate" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvTempMinValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/itemForecastDayTvTempMin"
                app:layout_constraintStart_toEndOf="@id/itemForecastDayTvTempMin"
                app:layout_constraintTop_toTopOf="@id/itemForecastDayTvTempMin"
                tools:text="+13" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvTempMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/temp_max"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemForecastDayTvTempMin" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvTempMaxValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/itemForecastDayTvTempMax"
                app:layout_constraintStart_toEndOf="@id/itemForecastDayTvTempMax"
                app:layout_constraintTop_toTopOf="@id/itemForecastDayTvTempMax"
                tools:text="+21" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/itemForecastDayTvTempMinValue"
                app:layout_constraintStart_toEndOf="@id/itemForecastDayTvTempMinValue"
                app:layout_constraintTop_toTopOf="@id/itemForecastDayTvTempMinValue"
                tools:text="Pressure: 755mm" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/itemForecastDayTvPressure"
                app:layout_constraintTop_toBottomOf="@id/itemForecastDayTvPressure"
                tools:text="Humidity: 80%" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemForecastDayTvClouds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/itemForecastDayTvHumidity"
                app:layout_constraintTop_toBottomOf="@id/itemForecastDayTvHumidity"
                tools:text="Clouds: 80%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>